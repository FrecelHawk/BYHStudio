<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    
    android:orientation="vertical" >

    <include layout="@layout/main_head" />

    <com.baiyuhui.huangyan.view.WebScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/school_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#121212"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/school_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textColor="#808080"
            android:textSize="15dp" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:scrollbars="none"/>
    </LinearLayout>
    </com.baiyuhui.huangyan.view.WebScrollView>

</LinearLayout><!-- From: file:/C:/ecpliseWork/byh/HuangYan/res/layout/home_school_details.xml -->