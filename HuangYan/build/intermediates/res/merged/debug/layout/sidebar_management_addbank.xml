<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/main_head" />

    <LinearLayout
        android:id="@+id/xuanze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择开户银行"
                android:textColor="#121212"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_toux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="开户姓名"
            android:paddingLeft="5dp"
            android:textColorHint="#cccccc"
            android:textSize="14dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="银行账号"
            android:paddingLeft="5dp"
            android:textColorHint="#cccccc"
            android:textSize="14dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="开户分行"
            android:paddingLeft="5dp"
            android:textColorHint="#cccccc"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/item_button_yuanjiao"
        android:gravity="center"
        android:text="保存账号信息"
        android:textColor="#ffffff"
        android:textSize="15dp" />

</LinearLayout><!-- From: file:/C:/ecpliseWork/byh/HuangYan/res/layout/sidebar_management_addbank.xml -->