<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_head" />

    <com.baiyuhui.huangyan.view.WebScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/video_list_item_layout"
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:gravity="center"
                android:orientation="vertical" >

                <WebView
                    android:id="@+id/details_web"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="hardware"
                    android:scrollbars="none" />
            </LinearLayout>

            <TextView
                android:id="@+id/intro"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="简介"
                android:textColor="#b99b21"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:background="#b99b21" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#e8e8e8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="#121212"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tiem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#929292"
                    android:textSize="10dp" />

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none" />
            </LinearLayout>
        </LinearLayout>
    </com.baiyuhui.huangyan.view.WebScrollView>

</LinearLayout><!-- From: file:/C:/ecpliseWork/byh/HuangYan/res/layout/home_vido_details.xml -->