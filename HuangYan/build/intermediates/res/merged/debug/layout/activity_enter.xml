<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_head" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/login_true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/login_ly_01"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="160dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/login_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownHeight="wrap_content"
                    android:dropDownHorizontalOffset="0dp"
                    android:gravity="center_vertical"
                    android:hint="@string/uname_txt_hint"
                    android:inputType="textPersonName"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/title_red"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:dropDownHeight="wrap_content"
                    android:dropDownHorizontalOffset="0dp"
                    android:gravity="center_vertical"
                    android:hint="@string/pwd_txt_hint"
                    android:inputType="textPassword"
                    android:paddingBottom="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/title_red"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_btn_bj"
                    android:text="@string/login"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_18" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" >

                <TextView
                    android:id="@+id/login_regTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical"
                    android:text="@string/register_txt"
                    android:textColor="@color/title_red"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/login_forgetTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:gravity="left|center_vertical"
                    android:text="@string/forgetPwd_txt"
                    android:textColor="@color/title_red"
                    android:textSize="@dimen/dp_15" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金额:"
                        android:textSize="@dimen/dp_20" />

                    <TextView
                        android:id="@+id/info_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56"
                        android:textSize="@dimen/dp_20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/info_sign"
                        style="@style/my_info"
                        android:text="签到"
                        android:textSize="@dimen/dp_20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分:"
                        android:textSize="@dimen/dp_20" />

                    <TextView
                        android:id="@+id/info_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68"
                        android:textSize="@dimen/dp_20" />
                </LinearLayout>
            </LinearLayout>

            <com.baiyuhui.huangyan.view.CircleImageView
                android:id="@+id/info_favicon"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_above="@+id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout><!-- From: file:/C:/ecpliseWork/byh/HuangYan/res/layout/activity_enter.xml -->