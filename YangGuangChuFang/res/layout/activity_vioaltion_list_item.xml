<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_violation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/violation_icon" />

        <LinearLayout
            android:id="@+id/violation_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_violation_icon"
            android:layout_alignTop="@+id/iv_violation_icon"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_violation_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vioaltion_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="麦当劳"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/vioaltion_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A9A9A9"
                android:textSize="14dp"
                android:text="2014-13-14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/violation_first"
            android:layout_below="@+id/violation_first"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AEAEAE"
                android:textSize="13dp"
                android:text="违规类别：" />

            <TextView
                android:id="@+id/vioaltion_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#F88625"
                android:textSize="14dp"
                android:text="吴健康" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#A9A9A9"
                android:textSize="14dp"
                android:text="广州食监局" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>