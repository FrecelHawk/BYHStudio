    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/put_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/btn_praise_selector"
            android:text="赞一下"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:textColor="#666666" />

        <RadioButton
            android:id="@+id/put_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/btn_collapse_selector"
            android:text="踩一下"
            android:gravity="center"
            android:textColor="#666666" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="反馈内容："
        android:textColor="#666666"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/refectory_edit"
        style="@style/editTextStyle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_common_edit"
        android:cursorVisible="true"
        android:gravity="top"
        android:lines="6"
        android:singleLine="false"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <Button
        android:id="@+id/refectory_submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:background="@drawable/btn_common_round_selector"
        android:text="提交反馈"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>