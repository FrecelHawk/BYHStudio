<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/desktop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp" >

        <TextView
            style="@style/editTextViewStyle"
            android:text="手机号码" />

        <EditText
            android:id="@+id/activity_mofify_phone"
            style="@style/editTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/activity_mofify_phone_vertifycode_btn"
            style="@style/editTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_my_vertifycode"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            style="@style/editTextViewStyle"
            android:text="输入验证码" />

        <EditText
            android:id="@+id/activity_mofify_phone_vertifycode_et"
            style="@style/editTextStyle"
            android:inputType="number"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_mofify_phone_btn"
        style="@style/MyButtonStyle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="确定" />

</LinearLayout>