<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/my_list_item_footer_selector"
    android:gravity="center"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ProgressBar
        android:id="@+id/list_footer_progress"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/drawable_loading_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/list_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_footer_progress"
        android:gravity="center"
        android:text="正在加载中..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>